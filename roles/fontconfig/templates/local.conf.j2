<?xml version="1.0"?>
<!DOCTYPE fontconfig SYSTEM "fonts.dtd">
<fontconfig>
{% if system_serif_font_family is defined %}
  <alias>
    <family>serif</family>
    <prefer><family>{{ system_serif_font_family }}</family></prefer>
  </alias>
{% endif %}
{% if system_sans_serif_font_family is defined %}
  <alias>
    <family>sans-serif</family>
    <prefer><family>{{ system_sans_serif_font_family }}</family></prefer>
  </alias>
{% endif %}
{% if system_monospace_font_family is defined %}
  <alias>
    <family>monospace</family>
    <prefer><family>{{ system_monospace_font_family }}</family></prefer>
  </alias>
{% else -%}
  <alias>
    <family>monospace</family>
    <prefer><family>{{ font_family }}</family></prefer>
  </alias>
{% endif %}
</fontconfig>
